%section#search
  %h1.hide 検索エリア
  .grid
    .col_12
      %form(method="post" action="/search")
        %input(type="text" name="keyword" placeholder="本のタイトル、著者名、出版社名など" value="#{@keyword}")
        %input(type="submit" value="検索" class="button orange large")

%section#breadcrumb
  %ul.breadcrumb
    %li
      %a(href="#") ホーム
    %li
      %a(href="#") 検索結果
    %li#last_bread_2
      %a(href="#") Keyword: #{@keyword}

%section#result.grid
  %h1.hide SEARCH RESULT
  - @result['Items'].each do |res|
    .col_2
      %div
        -# %a(href="result/#{res['Item']['isbn']}")
        %img(src="#{res['Item']['mediumImageUrl']}")
        %p
          %strong #{res["Item"]["title"]}
          %br
          %span  (#{res["Item"]["author"]})

      %div.left.notice.warning
        %i.icon-spinner.icon-large
        在庫検索中..

      %div
        %form(method="post" action="/detail")
          %input(type="hidden" name="keyword" value="#{@keyword}")
          %input(type="hidden" name="isbn" value="#{res['Item']['isbn']}")
          %input(type="hidden" name="title" value="#{res['Item']['title']}")
          %input(type="hidden" name="author" value="#{res['Item']['author']}")
          %input(type="hidden" name="mediumImageUrl" value="#{res['Item']['mediumImageUrl']}")
          %input(type="hidden" name="publisherName" value="#{res['Item']['publisherName']}")
          %input(type="hidden" name="salesDate" value="#{res['Item']['salesDate']}")
          %input(type="submit" value="詳細を見る" class="button")
